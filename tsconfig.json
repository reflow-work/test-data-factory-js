{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2022",
    "moduleDetection": "force",
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "bun-types" // add Bun global
    ],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist"
  },
  "include": ["./src/**/*.ts"]
}
